{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!!**/*.module.css"]
	},
	"css": {
		"formatter": {
			"enabled": false
		}
	},
	"html": {
		"formatter": {
			"enabled": false
		}
	},
	"assist": {
		"actions": {
			"recommended": true
		}
	}
}
